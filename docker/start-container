#!/bin/bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

cd /var/www/html
cp /var/www/vendor/* /var/www/html/vendor -R

if [ $# -gt 0 ]; then
    exec gosu $WWWUSER "$@"
else
    exec supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
